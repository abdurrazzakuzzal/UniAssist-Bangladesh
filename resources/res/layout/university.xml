<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent" android:layout_height="75dp" android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:weightSum="4">
        <ImageView android:id="@+id/unilogo" android:layout_width="0dp" android:layout_height="wrap_content" android:src="@drawable/logoaust" android:layout_weight="1"/>
        <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="3">
            <TextView android:textSize="20dp" android:textStyle="bold" android:gravity="center_horizontal" android:id="@+id/uname" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="Ahsanullah University of Science and Technology"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
